<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medecin.Startsidan1">
    <StackLayout BackgroundColor="AntiqueWhite">

        <Label Text="Tid Till nästa medicinering" Margin="20,20,20,20" TextColor="Black" FontSize="Large" FontAttributes="Bold"
               HorizontalOptions="CenterAndExpand"></Label>
        <Label  x:Name="tid" Margin="20,20,20,20" TextColor="Black" FontSize="Medium"
               HorizontalOptions="CenterAndExpand" FontAttributes="Bold"></Label>
        
        <Frame BackgroundColor="Green" Margin="10,10,10,10">
            <Button Text="Kalender" FontSize="Large" FontAttributes="Bold" BackgroundColor="Green" 
                    Clicked="Calenderbtn_Clicked"/>


        </Frame>


        <Frame BackgroundColor="Purple" Margin="10,10,10,10">
          <Button Text="Vädret" FontSize="Large" FontAttributes="Bold"  BackgroundColor="Purple"
                   Clicked="Weatherbtn_Clicked"/>
        
           
        </Frame>

        <Label x:Name="copyR" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Small" FontAttributes="Bold"
               TextColor="Black"  Margin="10,10,10,10"></Label>

        

    </StackLayout>
</ContentPage>